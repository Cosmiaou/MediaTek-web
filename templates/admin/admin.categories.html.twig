{% extends "baseadmin.html.twig" %}

{% block body %}
    
    <form class="form-inline mt-1" method="POST" action="{{ path('admin.categorie.ajout') }}">
        <div class="form-group mr-1 mb-2">
            <input type="text" class="sm" name="nom">
            <input type="hidden" name="_token" value="{{ csrf_token('filtre_ajout') }}">
            <button type="submit" class="btn btn-primary mb-2 btn-sm">Ajouter</button>
        </div>
    </form>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Nom
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>
                        <h5 class="text-primary">
                            {{ categorie.name }}
                        </h5>
                    </td>
                    <td>
                        <a
                            href="{{ path('admin.categorie.suppr', {id: categorie.id, _token: csrf_token('suppr' ~ categorie.id)}) }}" 
                            class="btn btn-danger" 
                            onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer {{ categorie.name }} ?')">
                            Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
{%  endblock %}